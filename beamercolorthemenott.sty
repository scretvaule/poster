% ====================
% Colors
% ====================

% Color definitions
\definecolor{deepblue}{RGB}{33, 53, 85}     % #213555
\definecolor{tealblue}{RGB}{62, 88, 121}    % #3E5879
\definecolor{softmint}{RGB}{216, 196, 182}  % #D8C4B6
\definecolor{palelight}{RGB}{250, 247, 243} % #FAF7F3
\definecolor{mediumblue}{RGB}{46, 70, 106}  % #2E466A
\definecolor{lightblue}{RGB}{80, 115, 150}  % #507396
\definecolor{paleblue}{RGB}{235, 240, 245}  % #EBF0F5
\definecolor{deepmint}{RGB}{181, 160, 137}  % #B5A089
\definecolor{textgray}{HTML}{3A3A3A}        % #3A3A3A
\definecolor{white}{HTML}{FFFFFF}

% Theme Colors
\setbeamercolor{palette primary}{fg=textgray,bg=white}
\setbeamercolor{palette secondary}{fg=textgray,bg=white}
\setbeamercolor{palette tertiary}{bg=deepblue,fg=white}
\setbeamercolor{palette quaternary}{fg=textgray,bg=white}
\setbeamercolor{structure}{fg=deepblue}

% Headline
\setbeamercolor{headline}{fg=white,bg=deepblue}
\setbeamercolor{headline rule}{bg=tealblue}
\setbeamercolor{headline title}{fg=white}
\setbeamercolor{headline author}{fg=white}
\setbeamercolor{headline institute}{fg=white}

% Block
\setbeamercolor{block title}{fg=mediumblue,bg=white}
\setbeamercolor{block separator}{bg=tealblue}
\setbeamercolor{block body}{fg=textgray,bg=white}

% Alert Block
\setbeamercolor{block alerted title}{fg=white,bg=lightblue}
\setbeamercolor{block alerted separator}{bg=deepblue}
\setbeamercolor{block alerted body}{fg=textgray,bg=paleblue}

% Example Block
\setbeamercolor{block example title}{fg=white,bg=softmint}
\setbeamercolor{block example separator}{bg=deepmint}
\setbeamercolor{block example body}{fg=textgray,bg=palelight}

% Other elements
\setbeamercolor{heading}{fg=deepblue}
\setbeamercolor{item}{fg=deepblue}
\setbeamercolor{bibliography item}{fg=textgray}
\setbeamercolor{bibliography entry author}{fg=textgray}
\setbeamercolor{bibliography entry title}{fg=textgray}
\setbeamercolor{bibliography entry location}{fg=textgray}
\setbeamercolor{bibliography entry note}{fg=textgray}

